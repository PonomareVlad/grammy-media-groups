{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "newLine": "lf",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "rootDir": "./src/",
        "strict": true,
        "declaration": true,
        "module": "es2022",
        "moduleResolution": "node",
        "outDir": "./out/",
        "skipLibCheck": true,
        "target": "es2022"
    },
    "include": ["src/"],
    "exclude": ["src/*.test.ts"]
}
